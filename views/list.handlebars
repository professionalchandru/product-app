<style>
    .shadow-box {
        background-color: seashell;
        width: 75%;
        height: auto;
        margin: 30px auto;
    }
</style>

<h1>Products</h1>
{{#if error}} <span style="color: red;">{{error}}</span>{{/if}}
<div class="container">
    <div class="shadow-box">
        <div>
            <label for="">Product Name:</label>
            {{#each product}}
            <li>{{this}}</li>
            {{/each}}
        </div>
    </div>
</div>